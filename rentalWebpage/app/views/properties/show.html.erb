<p id="notice"><%= notice %></p>

<h3>Property Details</h3>

<div class="row">
  <p><strong>Property Rating</strong></p>
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @property, current_user%>
</div>

<p><strong>Address:</strong><p>
<p>
  <%= @property.address + " " + @property.apartment %>
</p>

<p>
  <%= @property.city + ", " + @property.state + " " + @property.zipcode %>
</p>

<p>
  <strong>Bedrooms:</strong>
  <%= @property.rooms %>
</p>

<p>
  <strong>Bathrooms:</strong>
  <%= @property.bathrooms %>
</p>

<h2>Reviews</h2>
  <% @property.reviews.each do |review| %>


    <p id = "review">
      <em><%= review.created_at.to_date%><br></em>
      <%= review.review %>
    </p>
  <p>Did you find this review helpful?</p>
  <button name="button" type="submit">Helpful?</button>
  <% end %>

  
<h2>Add a review:</h2>
  <% if current_user %>
      <%= form_for([@property, @property.reviews.build]) do |f| %>
    <div>Rating: <%= rating_for @property, "property" %></div>
    <p>
      <%= f.label :review %><br>
      <%= f.text_area :review %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>
  <% else %>
    <p><strong>Please sign in to review this property!</strong></p>
<% end %>



